//- social
if theme.social && is_home()
  div.social
    for link, name in theme.social
      if name == "email"
        a.iconfont(class="icon-#{name}" href="mailto:#{link}") 
      else
        a.iconfont(class="icon-#{name}" href=url_for(link)) 

//- Copyright
if page.layout != 'tags' && page.layout != 'categories'
  .copyright
    - var currentDate = new Date()
    - var year = currentDate.getFullYear()
    - var since = config.since
    if since
      - year = year == since ? year : since + '-' + year
    - copyright = '&copy;&nbsp;' + year
    
    p.power
      != "Powered by "
      a(href="https://hexo.io/")
        != "Hexo" 
    p.since
      != copyright
      span.author
        != '&nbsp;' + config.author
  
//- Back to top
label#back2top
  i.iconfont.icon-up
